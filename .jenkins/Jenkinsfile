pipeline {
  agent none
  stages {
    stage('dependencies') {
      agent any
      steps {
          dir(path: '.jenkins/Ampel-interface') {
            git(url: 'https://github.com/AmpelProject/Ampel-interface', credentialsId: 'github')
          }
      }
    }
    stage('build') {
      agent {
        dockerfile {
          filename '.jenkins/Dockerfile.build'
        }
      }
      steps {
        sh 'rm mypy.*.xml || true'
        sh 'run_mypy.sh ampel'
      }
      post {
        always {
          junit 'mypy.*.xml'
        }
      }
    }
    stage('test') {
      agent {
        dockerfile {
          filename '.jenkins/Dockerfile.build'
        }
      }
      environment {
        COVERALLS_REPO_TOKEN = credentials('coveralls-repo-token-ampel-core')
        PYTHONPATH = '.'
      }
      steps {
        sh 'rm pytest.xml || true'
        sh 'rm coverage || true'
        sh 'python setup.py egg_info'
        sh 'pytest $(find ampel -name test -prune -o -type f -name \'*.py\' -print | xargs -L1 dirname | sort -u | xargs -I_ echo -n "--cov=_ ") --junitxml=pytest.xml'
      }
      post {
        always {
          junit 'pytest.xml'
          sh 'coveralls'
        }
      }
    }
  }
}
